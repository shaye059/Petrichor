<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Petrichor" parent="android:Theme.Holo.Light.DialogWhenLarge.NoActionBar">
        <item name="android:colorForeground">@android:color/holo_blue_light</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="PetrichorDefault" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_material_light_1</item>
        <item name="colorAccent">@color/primary_material_light_1</item>
    </style>

    <style name="PetrichorNew" parent="android:Theme.Holo.Light">
        <item name="android:colorForeground">@android:color/holo_blue_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
