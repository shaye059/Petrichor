<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.weihu.petrichor.HelpHowToUse">

    <RelativeLayout
        android:id="@+id/relLayHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_generic">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/julius_sans"
            android:text="- Daily Highlights: Share your 3 highlights of the day.\n\n- Highlights of the Week: Choose your best 3 moments from the daily highlights you have collected throughout the week.\n\n- Highlights of the Month: Choose your best 3 moments from the weekly highlights you have collected throughout the month.\n\n- Highlights of the Year: Choose your best 3 moments from the monthly highlights you have collected throughout the year.\n\n\nShare!"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnBack13"
            android:layout_width="89dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
