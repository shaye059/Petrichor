<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.weihu.petrichor.HelpAbout">

    <RelativeLayout
        android:id="@+id/relLayHelp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_generic">

        <Button
            android:id="@+id/btnBack13"
            android:layout_width="89dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnBack13"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/julius_sans"
            android:text="Petrichor is a journalling app developed by Galacticos, a team of University of Ottawa students.\n\nThe members include:\nDivyang Arora\nSpencer Hayes\nSrikar Kovvali\nTri-An Nguyen\nWei Hu\n\n"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="28sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
