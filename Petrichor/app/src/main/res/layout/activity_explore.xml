<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/explore"
    tools:context="ca.weihu.petrichor.Explore">

    <Button
        android:id="@+id/btnBack6"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:onClick="onBtnBack"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="80dp"
            android:layout_weight="0.34"
            android:fontFamily="@font/julius_sans"
            android:text="explore"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="80sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="HardcodedText,InefficientWeight"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/pastButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="27dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway_thin"
            android:onClick="OnPastButton"
            android:text="past series"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="190dp" />

        <Button
            android:id="@+id/highlightButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pastButton"
            android:layout_marginTop="43dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway_thin"
            android:onClick="OnHighlightsButton"
            android:text="highlights"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="144dp" />

        <Button
            android:id="@+id/timeperiodButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/highlightButton"
            android:layout_marginStart="22dp"
            android:layout_marginTop="38dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway_thin"
            android:onClick="onTimePeriodButton"
            android:text="time period "
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="207dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeperiodButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/raleway_thin"
            android:onClick="OnSameDayInPastButton"
            android:text="same day; past year"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="207dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
