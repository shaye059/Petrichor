<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/explore"
    tools:context="ca.weihu.petrichor.Explore">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.34"
        android:fontFamily="casual"
        android:text="explore"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="80sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="HardcodedText,InefficientWeight"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/btnBack6"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:onClick="onBtnBack"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/weekButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/monthButton"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:fontFamily="cursive"
            android:onClick="OnWeekButton"
            android:text="past week"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="190dp" />

        <Button
            android:id="@+id/monthButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/yearButton"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:fontFamily="cursive"
            android:onClick="OnMonthButton"
            android:text="past month"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="144dp" />

        <Button
            android:id="@+id/yearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:fontFamily="cursive"
            android:onClick="OnYearButton"
            android:text="past year"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="207dp" />

        <Button
            android:id="@+id/random"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/monthButton"
            android:layout_marginBottom="29dp"
            android:background="@android:color/transparent"
            android:fontFamily="casual"
            android:onClick="OnRandomButton"
            android:text="visit a\nrandom day"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="36sp"
            android:typeface="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            tools:ignore="HardcodedText"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/random"
            android:background="@android:color/transparent"
            android:fontFamily="cursive"
            android:onClick="OnSameDayInPastButton"
            android:text="same day; past year"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="55sp"
            tools:ignore="HardcodedText"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="207dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
