<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    android:visibility="visible"
    tools:context="ca.weihu.petrichor.NavBar"
    tools:ignore="ExtraText">

    <!-- <a> Please Note: The Buttons Are Already IMPLEMENTED: They are merely invisible. </a> -->
    <!-- <a> At least, that was the case, until Divyang made them visible again </a> -->

    <Button
        android:id="@+id/buttonToday"
        android:layout_width="291dp"
        android:layout_height="250dp"
        android:layout_column="3"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="173dp"
        android:layout_row="2"
        android:layout_weight=".75"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:onClick="onTodayButton"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,ObsoleteLayoutParam"
        tools:onClick="onTodayButton" />

    <Button
        android:id="@+id/buttonExplore"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:layout_column="3"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="86dp"
        android:layout_row="3"
        android:background="@android:color/transparent"
        android:onClick="onExploreButton"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,InefficientWeight,MissingConstraints,ObsoleteLayoutParam"
        tools:onClick="onExploreButton" />

    <ImageButton
        android:id="@+id/buttonNavBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:onClick="onNavBarButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_navbar" />

    <Button
        android:id="@+id/btnMissedADay"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="600dp"
        android:background="@android:color/transparent"
        android:fontFamily="ms reference sans serif"
        android:onClick="onBtnMissedADay"
        android:text="missed a day"
        android:textAllCaps="false"
        android:textColor="@color/petripurple"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
