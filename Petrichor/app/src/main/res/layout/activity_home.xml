<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    android:visibility="visible"
    tools:context="ca.weihu.petrichor.Home"
    tools:ignore="ExtraText">

    <!-- <a> Please Note: The Buttons Are Already IMPLEMENTED: They are merely invisible. </a> -->
    <!-- <a> At least, that was the case, until Divyang made them visible again </a> -->

    <Button
        android:id="@+id/buttonToday"
        android:layout_width="291dp"
        android:layout_height="250dp"
        android:layout_column="3"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="173dp"
        android:layout_row="2"
        android:layout_weight=".75"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:onClick="OnTodayButton"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,ObsoleteLayoutParam"
        tools:onClick="OnTodayButton" />

    <Button
        android:id="@+id/buttonExplore"
        android:layout_width="213dp"
        android:layout_height="61dp"
        android:layout_column="3"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="86dp"
        android:layout_row="3"
        android:background="@android:color/transparent"
        android:onClick="OnExploreButton"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,InefficientWeight,MissingConstraints,ObsoleteLayoutParam"
        tools:onClick="OnExploreButton" />

    <ImageButton
        android:id="@+id/buttonNavBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_navbar" />


        <LinearLayout>
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".61"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonToday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_row="2"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:onClick="OnTodayButton"
                android:visibility="visible"
                tools:ignore="HardcodedText,MissingConstraints,ObsoleteLayoutParam"
                tools:layout_editor_absoluteX="56dp"
                tools:layout_editor_absoluteY="168dp"
                tools:onClick="OnTodayButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.01"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout>
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".99"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonExplore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_row="3"
                android:background="@android:color/transparent"
                android:onClick="OnExploreButton"
                android:padding="0dp"
                android:visibility="visible"
                tools:ignore="HardcodedText,InefficientWeight,MissingConstraints,ObsoleteLayoutParam"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="449dp"
                tools:onClick="OnExploreButton" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".955"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="10"
                    android:background="@android:color/transparent"
                    android:onClick="onHelpButton"
                    android:text="?"
                    android:textColor="#824d91"
                    android:textSize="80px" />

                <Button
                    android:id="@+id/btnMyAcc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="200dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="MS Reference Sans Serif"
                    android:onClick="onMyAccountButton"
                    android:padding="0dp"
                    android:text="my account"
                    android:textAllCaps="false"
                    android:textColor="#824d91"
                    android:textSize="80px" />
            </LinearLayout>

        </LinearLayout>
</android.support.constraint.ConstraintLayout>
