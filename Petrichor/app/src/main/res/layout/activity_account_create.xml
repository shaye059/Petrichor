<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account"
    tools:context="ca.weihu.petrichor.AccountCreate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCreateUsername3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="144dp"
            android:fontFamily="MS Reference Sans Serif"
            android:text="Username:"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextCreateUsername3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewLoginUsername"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:fontFamily="MS Reference Sans Serif"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewCreatePassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewLoginUsername"
            android:layout_below="@+id/editTextLoginUsername"
            android:layout_marginTop="62dp"
            android:fontFamily="MS Reference Sans Serif"
            android:text="Password:"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextCreatePassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewLoginPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:ems="10"
            android:fontFamily="MS Reference Sans Serif"
            android:inputType="textPassword"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_column="3"
            android:layout_marginBottom="80dp"
            android:layout_row="3"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="MS Reference Sans Serif"
            android:onClick="onCreate"
            android:text="create account"
            android:textAllCaps="false"
            android:textSize="36sp"
            android:visibility="visible"
            tools:ignore="HardcodedText,InefficientWeight,MissingConstraints,ObsoleteLayoutParam"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="449dp"
             />
    </LinearLayout>

    <Button
        android:id="@+id/btnBack10"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />
</android.support.constraint.ConstraintLayout>
